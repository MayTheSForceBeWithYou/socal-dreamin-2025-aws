# Example terraform.tfvars file
# Copy this file to terraform.tfvars and fill in your values

aws_region = "us-west-1"
project_name = "sf-opensearch-lab"
owner = "lab-user"
vpc_cidr = "10.0.0.0/16"

# SSH Public Key - Replace with your actual public key
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC..."

# OpenSearch Configuration
opensearch_instance_type = "t3.small.search"
opensearch_instance_count = 1
opensearch_ebs_volume_size = 20

# EC2 Configuration
ec2_instance_type = "t3.micro"
poll_interval_seconds = 60

# Bastion Host Configuration
bastion_instance_type = "t3.micro"

# Security Configuration - IMPORTANT: Replace with your actual public IP
# You can find your public IP at: https://whatismyipaddress.com/
# Format: "YOUR_IP/32" (e.g., "203.0.113.1/32")
allowed_cidr_blocks = ["YOUR_PUBLIC_IP/32"]

# Salesforce Configuration
# Replace with your actual Salesforce instance URL
salesforce_instance_url = "https://your-instance.salesforce.com"

# Salesforce JWT Credentials
# Replace with your actual Connected App Consumer Key
salesforce_client_id = "your-connected-app-consumer-key"

# Replace with your actual Salesforce username
salesforce_username = "your-salesforce-username@your-domain.com"

# Replace with your actual private key (PEM format)
# This should be the private key that corresponds to the public key
# uploaded to your Salesforce Connected App
salesforce_private_key = <<EOF
-----BEGIN PRIVATE KEY-----
MIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...
-----END PRIVATE KEY-----
EOF
